#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {

  right_layout: physical_layout_0 {
    compatible = "zmk,physical-layout";
    display-name = "Right layout";
    kscan = <&right_scan>;
    transform = <&right_transform>;
  };

  chosen {
    zmk,physical-layout = &right_layout;
  };


  right_transform: keymap_transform_0 {
    compatible = "zmk,matrix-transform";
    columns = <5>;
    rows = <4>;

    map = <
      RC(0,0) RC(0,1) RC(0,2) RC(0,3)  
      RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(0,4) 
      RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) 
      RC(3,0) RC(3,1) RC(3,2) 
    >;
  };

  right_scan: kscan_0 {
    compatible = "zmk,kscan-gpio-matrix";
    diode-direction = "col2row";
    wakeup-source;
    debounce-press-ms = <5>;      // Wait 5ms to confirm key press
    debounce-release-ms = <5>;    // Wait 5ms to confirm key release
    debounce-scan-period-ms = <1>; // Scan every 1ms when keys are activev

    row-gpios =
      <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, 
      <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, 
      <&xiao_d 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, 
      <&xiao_d 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>; 

    col-gpios =
      <&xiao_d 0 GPIO_ACTIVE_HIGH>, 
      <&xiao_d 1 GPIO_ACTIVE_HIGH>, 
      <&xiao_d 2 GPIO_ACTIVE_HIGH>, 
      <&xiao_d 3 GPIO_ACTIVE_HIGH>, 
      <&xiao_d 4 GPIO_ACTIVE_HIGH>;
  };

};
